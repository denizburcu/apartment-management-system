@using ApartmentManagement.Core.Models

@model User

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Ekle</h2>
			<hr />
		</div>
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3">
			<label asp-for="Name">İsim</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="LastName">Soyisim</label>
			<input asp-for="LastName" class="form-control" />
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="UserName">Kullanıcı Adı</label>
			<input asp-for="UserName" class="form-control" />
			<span asp-validation-for="UserName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="IdentityNumber">T.C Kimlik No</label>
			<input asp-for="IdentityNumber" class="form-control" />
			<span asp-validation-for="IdentityNumber" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="PhoneNumber">Telefon</label>
			<input asp-for="PhoneNumber" class="form-control" />
			<span asp-validation-for="PhoneNumber" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Email">Email</label>
			<input asp-for="Email" class="form-control" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="PlateNumber">Araba Plakası</label>
			<input asp-for="PlateNumber" class="form-control" />
			<span asp-validation-for="PlateNumber" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary" style="width:150px" asp-action="Create">Ekle</button>
		<a asp-controller="User" asp-action="Index" class="btn btn-secondary" style="width:250px">
			Apartman Sakinleri
		</a>
	</div>
</form>
