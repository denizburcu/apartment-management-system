@using ApartmentManagement.Core.Models

@model IEnumerable<User>
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Apartman Sakinleri</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="User" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp; Ekle
			</a>
		</div>
	</div>
	<br /><br />
	@if(TempData["password"] != null){
		<div class="alert alert-info" role="alert">
			Yeni eklediğiniz apartman sakini şifresini iletmeyi unutmayın:@TempData["password"]
		</div>
	}
	
	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					İsim
				</th>
				<th>
					Soyisim
				</th>
				<th>
					T.C. Kimlik No 
				</th>
				<th>
					Telefon
				</th>
				<th>
					Email
				</th>
				<th>
					Araba Plakası
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var user in Model)
			{
				<tr>
					<td width="10%">
						@user.Name
					</td>
					<td width="10%">
						@user.LastName
					</td>
					<td width="10%">
						@user.IdentityNumber
					</td>
					<td width="10%">
						@user.PhoneNumber
					</td>
					<td width="10%">
						@user.Email
					</td>
					<td width="10%">
						@user.PlateNumber
					</td>

					<td width="10%">
						<div class="w-75 btn-group" role="group">
							<a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id"
						   class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Güncelle</a>
							<a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id"
						   class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i>Sil</a>
						</div>
					</td>
				</tr>
			}
		</tbody>

	</table>
</div>
